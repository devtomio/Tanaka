<%- include('./partials/_head') %>

<body class="github-font-standard">
	<% if (data === null) { %>
		<section class="fullscreen">
			<div class="background" style="background-image: url('https://http.cat/401');"></div>
			<div class="center-object center-text">
				<h2 class="bold no-margin">
					<span class="alizarin-text">401</span>
					<br />
					You must login with Discord to continue.
				</h2>
				<div class="buttons">
					<a href="/auth/login" class="btn alizarin-border">Login</a>
					<a href="#" class="btn emerald-border" onclick="window.history.go(-1); return false;">Go
						one step back</a>
				</div>
			</div>
		</section>
	<% } else { %>
		<div class="paper-container">
			<div class="ribbon disco-ball"></div>
			<div class="paper markdown-container">
				<img class="center image-circle" src="<%= data.displayAvatarURL({ size: 512, dynamic: true });%>" alt="avatar" />
				<h1 class="center youtube-text"><%= `${data.username}#${data.discriminator}` %></h1>

				<h3><strong>Username:</strong> <%= data.username %></h3>
				<h3><strong>Discriminator:</strong> <%= data.discriminator %></h3>
				<h3><strong>ID:</strong> <%= data.id %></h3>
				<h3><strong>Time Created:</strong> <%= moment(data.createdTimestamp).format('LT')%> <%= moment(data.createdTimestamp).format('LL') %> <%= moment(data.createdTimestamp).fromNow() %></h3>
			</div>
		</div>

		<%- include('./partials/_footer') %>
	<% } %> 
</body>
